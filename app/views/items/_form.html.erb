<paper-input-container always-float-label>
  <label>Name</label>
  <%= f.text_field :name, autofocus: true %>
</paper-input-container>

<paper-input-container always-float-label>
  <label>Price</label>
  <%= f.text_field :price, 'type': 'number' %>
</paper-input-container>

<paper-input-container always-float-label textarea>
  <label>Description</label>
  <%= f.text_field :description %>
</paper-input-container>

<paper-input-container always-float-label textarea>
  <label>The first picture will be the thumbnail icon. You can upload up to 3 pictures.</label>
</paper-input-container>
<%= f.file_field :picture %>
<%= f.file_field :picture2 %>
<%= f.file_field :picture3 %>
