<paper-material elevation="1" class="maincontent">
  <h2>Bidders</h2>
  <table>
    <tr id="head">
      <td>Name</td>
      <td>Bid Price</td>
      <td>Date</td>
      <td></td>
    </tr>
    <% @item.bids.each do |bid| %>
      <tr>
        <td><%= bid.name %></td>
        <td><%= bid.bid_price %></td>
        <td><%= bid.created_at %></td>
        <td><%= link_to "<paper-button class='content'>Delete</paper-button>".html_safe, bid_path(bid), method: :delete,
            :data => {:confirm => 'Are you sure you would like to delete the bid?'} %></td>
      </tr>
    <% end %>
  </table>
</paper-material>

<paper-material elevation="1" class="maincontent">
  <%= link_to "<paper-button class='content'>Go Back to Item</paper-button>".html_safe, item_path(@item.id) %>
</paper-material>
