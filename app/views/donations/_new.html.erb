<div id="pledge-form">
  <%= form_for donation,
               url: {action: "create"},
               remote: true do |f| %>
    <paper-input-container always-float-label class="field">
      <%= f.label :name, 'Your Name' %><br>
      <%= f.text_field :name %>
    </paper-input-container>
    <paper-input-container always-float-label class="field">
      <%= f.label :email, 'Your Email' %><br>
      <%= f.text_field :email %>
    </paper-input-container>
    <paper-input-container always-float-label class="field">
      <%= f.label :amount, 'Your Phone Number' %></br>
      <%= f.text_field :phone %>
    </paper-input-container>
    <paper-input-container always-float-label class="field number-field">
      <%= f.label :amount, 'Amount Pledged ($)' %><br>
      <%= f.number_field :amount, step: 5, value: 20 %>
    </paper-input-container>
    <div class="actions">
      <%= f.submit "Take pledge", data: { disable_with: 'Submitting...' } %>
    </div>
  <% end %>
</div>
