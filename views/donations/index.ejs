<paper-material elevation="1" class="maincontent">
  <div class='container'>
    <h3>This is the index page for donations.</h3>
    <div id='pledge-cancel-button'>
      <div id='pledge-x-upper'></div>
      <div id='pledge-x-lower'></div>
    </div>
    <div id='pledge-button'><%= link_to('Make a pledge', '/donations/new') %></div>
    <% if(donations.length > 0){ %>
      <p>Donors who have made a pledge:</p>
      <% donations.forEach(function(donation){ %>
        <paper-item>
          <% if(session.user){ %>
            <paper-item-body two-line>
              <div><%= donation.name %></div>
              <div secondary>
                <%= donation.email %> | <%= donation.phone %> | <%= donation.amount %> |
                <%= link_to('Destroy', donation.destroy_path()) %>
              </div>
            </paper-item-body>
          <% }else{ %>
            <div><%= donation.name %></div>
          <% } %>
        </paper-item>
      <% }) %>
    <% }else{ %>
      <p>There have been no donations made at this point. Be the first to make the pledge!</p>
    <% } %>
  </div>
</paper-material>
