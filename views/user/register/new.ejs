<paper-material elevation="1" class="maincontent">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "form"}) do |f| %>
    <%= devise_error_messages! %>

    <paper-input-container always-float-label>
      <label>Name</label>
      <%= f.text_field :name, autofocus: true %>
    </paper-input-container>

    <paper-input-container always-float-label>
      <label>Email</label>
      <%= f.email_field :email, autofocus: true %>
    </paper-input-container>

    <paper-input-container always-float-label>
      <label>Password (<%= @minimum_password_length %> characters minimum)</label>
      <%= f.password_field :password, autocomplete: "off", id: "newpassword" %>
      <paper-input-char-counter></paper-input-char-counter>
    </paper-input-container>

    <paper-input-container always-float-label>
      <label>Password Confirmation</label>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </paper-input-container>

    <paper-button id="submit">Sign up</paper-button>
  <% end %>

  <hr>
  <%= render "devise/shared/links" %>
</paper-material>

<paper-material elevation="1" class="maincontent">
  <h3>Note:</h3>
  The sign in is meant for auction owners to be able to manage their auctions.
  If you are simply an auction bidder, then you do not need an account.
</paper-material>
